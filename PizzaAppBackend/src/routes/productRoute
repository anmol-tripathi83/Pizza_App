// Resource - Product

const uploader = require('../middleware/multerMiddleware');

const express = require('express');
const { addProduct, getProduct, deleteProduct } = require('../controllers/productController');


// We have to initialise a router object to add routes in a new file
// Routers are used for segregating your routes in different modules
const ProductRouter = express.Router();

// localhost:5002/user/product -> POST
ProductRouter.post('/', uploader.single('productImage') ,addProduct);      // uploader.single(key) process the key to which the image is sended from the frontened 

// Get /products/:id
ProductRouter.get('/:id',getProduct);
// delete /products/:id
ProductRouter.delete('/:id',deleteProduct);

module.exports = ProductRouter;         // exporting the router